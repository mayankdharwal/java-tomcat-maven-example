pipeline {
    agent any
    stages {
        stage ('Initialize') {
            steps {
            	
                /*For windows machine */
               echo "PATH = ${PATH}"
               echo "M2_HOME = ${M2_HOME}"
               
                /*For Mac & Linux machine */
               // sh  'mvn clean package'
            }
        }

        stage ('Build'){
            steps{
            
                echo "Hello World"

            }
        }
        
        stage ('Deploy'){
            steps{
            
                echo "deployed any artifact"

            }
        }
    }
}
